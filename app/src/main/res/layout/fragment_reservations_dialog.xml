<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parkhere.android.ReservationsDialogFragment">

    <Button
        android:id="@+id/reservation_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Delete This Reservation?" />

    <Button
        android:id="@+id/reservation_write_review_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reservation_delete_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Write Review For This Reservation" />


</RelativeLayout>
